# /etc/init/god.conf
# See for detailed explanation
# http://www.grant-olson.net/news/2014/03/20/upstart_config_for_god.html

start on runlevel [2345]
stop on runlevel [06]


chdir {{ app_directory }}

# change apps to match your deployment user if you want to use this as a less privileged user (recommended!)
setuid {{ app_user }}
setgid {{ app_user }}

respawn
respawn limit 10 60

exec sudo {{ app_directory }}/vendor/bundle/ruby/2.2.0/gems/god-0.13.7/bin/god -c {{ app_directory }}/config/god.rb --log {{ app_directory }}/log/god_main.log


